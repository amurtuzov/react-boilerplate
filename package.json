{
  "name": "react-ts-boilerplate",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "author": "amurtuzov <amurtuzov92@gmail.com>",
  "scripts": {
    "serve": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "kill": "lsof -t -i tcp:3000,8080 | xargs kill -9",
    "test": "vitest run",
    "version-update": "yarn config set version-git-tag false && yarn version --new-version $VERSION && git push --tags &&  git add . && git commit -m \"version update\" && git push && echo \"Successfully released version: $VERSION\"",
    "post-release": "git checkout master && git push && git push --tags && git checkout develop && git push"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "axios": "^1.5.0",
    "dayjs": "^1.11.9",
    "localforage": "^1.10.0",
    "lodash": "^4.17.21",
    "match-sorter": "^6.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.2",
    "react-router-dom": "^6.16.0",
    "react-select": "^5.7.4",
    "sort-by": "^1.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@types/lodash": "^4.14.198",
    "@types/node": "^20.6.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.0.11",
    "jsdom": "^22.1.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitejs/plugin-legacy": "^4.1.1",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "msw": "^1.1.0",
    "prettier": "^3.0.3",
    "sass": "^1.67.0",
    "terser": "^5.19.4",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-svgr": "^3.2.0",
    "vitest": "^0.34.4"
  }
}
